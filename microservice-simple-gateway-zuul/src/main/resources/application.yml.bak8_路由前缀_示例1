server:
  port: 8040

spring:
  application:
    # 指定注册到eureka server上的服务名称，对于电影微服务，本系列将名称设为microservice-simple-gateway-zuul
    name: microservice-simple-gateway-zuul
  main:
    allow-bean-definition-overriding: true

eureka:
  client:
    service-url:
      # 指定eureka server通信地址，注意/eureka/小尾巴不能少
      defaultZone: http://user:password123@localhost:8761/eureka/
  instance:
    # 是否注册IP到eureka server，如不指定或设为false，那就会注册主机名到eureka server
    prefer-ip-address: true

#可以访问http://localhost:8040/actuator/hystrix.stream查看相应的信息
management:
  endpoints:
    web:
      exposure:
        include: '*'
  endpoint:
    health:
      show-details: always

#示例1：
#这样，访问Zuul的/api/microservice-simple-provider-user/1路径，请求将会被转发到microservice--simple-provider-user的/api/1
zuul:
  prefix: /api
  strip-prefix: false
  routes:
    microservice-simple-provider-user: /user/**
    
    


